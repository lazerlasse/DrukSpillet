<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:pages="clr-namespace:DrukSpillet.Pages"
             xmlns:viewmodels="clr-namespace:DrukSpillet.ViewModels"
             x:Class="DrukSpillet.Pages.HomePage"
             x:DataType="viewmodels:HomePageViewModel"
             Title="{Binding Title}">
    
    <Grid
        RowDefinitions="auto,auto,auto,auto"
        ColumnDefinitions="*"
        Margin="10">
        
        <Label
            Text="Velkommen til drukspillet"
            Grid.Row="0"
            Grid.Column="0"
            FontSize="Title"
            FontAttributes="Bold"
            VerticalOptions="Center" 
            HorizontalOptions="Center"/>

        
        <Label
            Text="VÃ¦lg spil for at komme igang"
            Grid.Row="1"
            Grid.Column="0"
            FontSize="Subtitle"
            FontAttributes="Bold"
            VerticalOptions="Center"
            HorizontalOptions="Center" />

        <BoxView
            Grid.Row="2"
            Grid.Column="0"
            HeightRequest="1"
            BackgroundColor="LightGray"
            HorizontalOptions="Fill"
            Margin="0,20,0,10" />

        <!-- Sandhed eller Konsekvens -->
        
        <Button
            Text="Sandhed eller konsekvens"
            Grid.Row="3"
            Grid.Column="0"
            FontSize="Default"
            FontAttributes="Bold"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            Margin="0,10,0,0"/>
        
        
        

    </Grid>
</ContentPage>